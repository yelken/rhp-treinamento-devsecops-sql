[sqlfluff]
dialect = postgres
templater = jinja
max_line_length = 200
exclude_rules = L009,L031

[rules]
tab_space_size = 4
commas = trailing

[rules.capitalisation.functions]
capitalisation_policy = lower

[rules.capitalisation.types]
capitalisation_policy = lower

[rules.capitalisation.identifiers]
capitalisation_policy = lower


